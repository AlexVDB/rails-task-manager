<h1>Today's Todo's</h1>

<% @tasks.each do |task| %>
  <p><input type="checkbox" name="done">
  <%= link_to "#{task.title}", task_path(task) %> * <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
<% end %>

<p><%= link_to 'Add a new task', new_task_path %></p>

